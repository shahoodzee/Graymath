<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Graymath.Views.LateConfirmation">
    <NavigationPage.TitleView>
        <Grid>
            <Label Grid.Row="0"
               Grid.Column="0"
               Text="GrayMath"
               VerticalOptions="Start"
               FontAttributes="Bold"
               FontSize="20"
               TextColor="White"/>
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="Are you sure ?" FontSize="30" HorizontalOptions="CenterAndExpand" />
            <Button Text="Yes" Clicked="YesButton_Clicked" BackgroundColor="#007AFF" TextColor="White" CornerRadius="20" />
            <Button Text="No" Clicked="NoButton_Clicked" BackgroundColor="#FF0000" TextColor="White" CornerRadius="20" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>