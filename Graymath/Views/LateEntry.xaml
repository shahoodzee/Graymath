<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Graymath.Views.LateEntry">

    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="20">
            <Frame CornerRadius="10" BackgroundColor="#E5E5E5" WidthRequest="300" HeightRequest="200">
                <StackLayout>
                    <Label Text="Confirm that you are late" FontSize="Large" HorizontalOptions="CenterAndExpand" Margin="10" />
                    <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Margin="10">
                        <Label Text="Arrival Time: " VerticalOptions="Center" />
                        <TimePicker x:Name="ArrivalTimePicker" Format="T" />
                    </StackLayout>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
