<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Graymath.Views.LateEntry">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="20">
            <Frame CornerRadius="10" BackgroundColor="#E5E5E5" WidthRequest="300" HeightRequest="180">
                <StackLayout>
                    <!-- Title Section -->
                    <Label Text="Confirm your Late Arrival" FontSize="Large" HorizontalOptions="CenterAndExpand" Margin="10" />

                    <!-- Time Picker Section -->
                    <TimePicker x:Name="ArrivalTimePicker" Format="T" />

                    <!-- Confirm Button to navigate to LateConfirmation Page -->
                    <Button Text="Confirm"
                            FontSize="Large"
                            BackgroundColor="#007AFF"
                            TextColor="White"
                            CornerRadius="10"
                            HorizontalOptions="CenterAndExpand"
                            Margin="10"
                            Clicked="ConfirmButton_Clicked"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
