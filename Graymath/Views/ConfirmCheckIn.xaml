<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Graymath.Views.ConfirmCheckIn">
    <NavigationPage.TitleView>
        <Grid>
            <Label Grid.Row="0"
               Grid.Column="0"
               Text="GrayMath"
               VerticalOptions="Start"
               FontAttributes="Bold"
               FontSize="20"
               TextColor="White"/>
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout>
            <!-- Card-Like Container for Input Fields -->
                <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                    <Label Text="Check-In Time"
                           FontSize="40"/>
                    <TimePicker x:Name="CheckInPicker" />

                    <Button Text="Check In" Clicked="CheckInButton_Clicked" HorizontalOptions="Center" BackgroundColor="#007AFF" TextColor="WhiteSmoke" CornerRadius="20" />
                </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
