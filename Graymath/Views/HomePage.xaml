<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Graymath.Views.HomePage">

    <!--<ContentPage.BackgroundColor>
        <Color>Cyan</Color>
    </ContentPage.BackgroundColor>-->
    <ContentPage.Content>
        <Grid RowDefinitions="Auto,*">

            <!-- Header Section -->
            <StackLayout Grid.Row="0" VerticalOptions="CenterAndExpand">
                <Image Source="HomePage_Logo.jpg"
                       HeightRequest="300" 
                       WidthRequest="300" 
                       HorizontalOptions="Center" />

                
            </StackLayout>

            <!-- Main Content Section -->
            <StackLayout Grid.Row="1" Padding="20">
                <Label Text="Welcome to Graymath" FontSize="24" HorizontalOptions="CenterAndExpand" />

                <!-- Button to navigate to the login page -->
                <Button Text="Go" Clicked="OnLoginButtonClicked" HorizontalOptions="Center" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>

</ContentPage>